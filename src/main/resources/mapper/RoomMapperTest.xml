<?xml version="1.0" encoding="UTF-8" ?>
<!-- Dept.xml 在com.tarena.entity 包中  -->  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
 <mapper namespace="cn.drrs.face_meeting.dao.RoomDaoTest">
 	<!--分页查询数据，根据limit和page进行分页-->
    <select id="findRoomByPage" parameterType="Map" resultType="cn.drrs.face_meeting.entity.RoomTest">
        SELECT rId,rName,rInfo,rSize,rAddr,tName
        FROM  Room
        <if test="page!=null and limit!=null">
            limit #{page},#{limit}
        </if>
    </select>
    <!--查询记录总数-->
    <select id="queryRoomCount"  resultType="java.lang.Integer">
        SELECT count(*) FROM  Room
    </select>
 </mapper>